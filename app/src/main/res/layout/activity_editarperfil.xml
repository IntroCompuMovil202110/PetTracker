<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/datos"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombres :  "
                android:textSize="17dp"
                android:textColor="#5E5C5C"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellidos:  "
                android:textSize="17dp"
                android:textColor="#5E5C5C"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo:  "
                android:textSize="17dp"
                android:textColor="#5E5C5C"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:paddingTop="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono:  "
                android:textSize="17dp"
                android:textColor="#5E5C5C"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección:  "
                android:textSize="17dp"
                android:textColor="#5E5C5C"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:layout_below="@+id/tag_telefono"
                />

            <TextView
                android:id="@+id/tagCostoE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costo \nServicio:  "
                android:textSize="17dp"
                android:textColor="#5E5C5C"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:visibility="gone"
                android:layout_below="@+id/tag_contrasena"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña:  "
                android:textSize="17dp"
                android:textColor="#5E5C5C"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:layout_below="@+id/tag_direccion"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmación\ncontraseña:  "
                android:textSize="17dp"
                android:textColor="#5E5C5C"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:layout_below="@+id/tag_contrasena"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nombreE"
                android:textSize="17dp"
                android:hint="Nombres"
                android:paddingBottom="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/apellidos"
                android:textSize="17dp"
                android:hint="Apellidos"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/correo"
                android:textSize="17dp"
                android:hint="Ingrese un correo"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/telefono"
                android:textSize="17dp"
                android:hint="Ingrese un teléfono"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:id="@+id/direccion"
                android:textSize="17dp"
                android:hint="Ingrese su direccion"
                android:paddingBottom="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:id="@+id/costoE"
                android:textSize="17dp"
                android:hint="Ingrese el costo promedio"
                android:visibility="gone"
                android:paddingBottom="20dp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:id="@+id/contrasena"
                android:textSize="17dp"
                android:hint="Ingrese su contraseña"
                android:paddingBottom="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:id="@+id/confirmacion_contrasena"
                android:textSize="17dp"
                android:hint="Ingrese su contraseña"
                android:paddingBottom="20dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/icono_cancelar"
                android:id="@+id/btn_cancelar"
                android:onClick="cancelarPerfil"
                android:backgroundTint="@android:color/transparent"
                />
        </LinearLayout>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/icono_guardar"
            android:id="@+id/btn_guardar"
            android:onClick="guardarPerfil"
            android:backgroundTint="@android:color/transparent"
            />
    </LinearLayout>

</LinearLayout>