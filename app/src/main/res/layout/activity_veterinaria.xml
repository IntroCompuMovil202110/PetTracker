<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/veterinaria"
        android:scaleType="fitCenter"
        android:id="@+id/imgVet"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgVet"
        android:text="Nombre"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:id="@+id/nomVeterinaria"
        android:paddingBottom="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nomVeterinaria"
        android:text="Direccion"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/dirVeterinaria"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/telVeterinaria"
        app:layout_constraintTop_toBottomOf="@id/dirVeterinaria"
        android:text="Abierto"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/horaVeterinaria"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Telefono"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/telVeterinaria"
        />
</androidx.constraintlayout.widget.ConstraintLayout>